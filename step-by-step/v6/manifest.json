{
  "manifest_version": 2,
  "name": "DeeptransLate",
  "version": "0.6",
  "description": "Demo: Einbau der Server-Antwort",
  "author": "Herbert Braun, c't Magazin",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "DeeptransLate",
    "default_icon": {
      "16": "icons/icon16.png",
      "20": "icons/icon20.png",
      "24": "icons/icon24.png",
      "25": "icons/icon25.png",
      "30": "icons/icon30.png",
      "32": "icons/icon32.png",
      "40": "icons/icon40.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "permissions": [
    "contextMenus",
    "https://www.deepl.com/jsonrpc"
  ]
}